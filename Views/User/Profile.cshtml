
@{
    ViewData["Title"] = "Perfil";
    ViewBag.Perfil = "active";
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></div>
        <div class="breadcrumb-item active">@ViewData["Title"]</div>
    </div>
</div>

<div class="section-body">
    <h2 class="section-title">Configurações de Perfil</h2>

    <p class="section-lead">
        Configurações de perfil e usuário
    </p>

    <div id="output-status"></div>
    <div class="row">
        <div class="col-md-4">
            <partial name="_LayoutProfile.cshtml" />
        </div>
        <div class="col-md-8">
            <form id="setting-form">
                <div class="card" id="settings-card">
                    <div class="card-header">
                        <h4>Alterar Perfil</h4>
                    </div>
                    <div class="card-body">
                        <div class="card-description">
                            <div>Perfil <div class="text-danger d-inline font-weight-normal"><div class="slash"></div> Cliente</div></div>
                        </div>
                        <p class="text-muted">Alterações iniciais do usuário</p>
                        <div class="form-group row align-items-center">
                            <label for="site-title" class="form-control-label col-sm-3 text-md-right">Email</label>
                            <div class="col-sm-6 col-md-9">
                                <input type="text" class="form-control" id="site-title">
                            </div>
                        </div>

                        <div class="form-group row align-items-center">
                            <label for="site-title" class="form-control-label col-sm-3 text-md-right">Senha Antiga</label>
                            <div class="col-sm-6 col-md-9">
                                <input type="text" class="form-control" id="site-title">
                            </div>
                        </div>

                        <div class="form-group row align-items-center">
                            <label for="site-title" class="form-control-label col-sm-3 text-md-right">Senha Nova</label>
                            <div class="col-sm-6 col-md-9">
                                <input type="text" class="form-control" id="site-title">
                            </div>
                        </div>

                    </div>
                    <div class="card-footer bg-whitesmoke text-md-right">
                        <button class="btn btn-primary" id="save-btn">Salvar</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>