@model IEnumerable<papuff.backoffice.Models.Response.WalletResponse>

@using papuff.backoffice.Models.Helpers
@using papuff.backoffice.Models.Request

@{
    ViewData["Title"] = "Carteiras";
    ViewBag.Wallets = "active";

    var command = new DocumentRequest();
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></div>
        <div class="breadcrumb-item"><a asp-controller="User" asp-action="Profile">Perfil</a></div>
        <div class="breadcrumb-item active">@ViewData["Title"]</div>
    </div>
</div>

<div class="section-body">
    <h2 class="section-title">Configurações de Carteira</h2>

    <p class="section-lead">
        Configurações de pagamento do usuário
    </p>

    <div id="output-status"></div>
    <div class="row">

        <div class="col-md-4">
            <partial name="_LayoutProfile.cshtml" />
        </div>

        <div class="col-md-8">
            <form asp-action="User" id="setting-form" asp-controller="Wallet" asp-anti-forgery class="needs-validation" novalidate="" data-ajax="true" data-ajax-method="POST" data-ajax-failure="FormOnFail" data-ajax-success="window.location = '/User/Document'">
                <div class="card" id="settings-card">
                    <div class="card-header">
                        <h4>Criar Pagamento</h4>
                    </div>
                    <div class="card-body">
                        <p class="text-muted">Criar nova forma de pagamento</p>
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label for="inputEmail4">Tipo de Pagamento</label>
                                <select class="form-control" name="type" asp-items="Helper.ToDropDown<PaymentType>()">
                                    <option selected="selected" value="">Selecione</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <label for="datedue">Data de Processamento</label>
                                <select class="form-control" name="dateDue">
                                    <option>Selecione</option>
                                    <option>5</option>
                                    <option>10</option>
                                    <option>15</option>
                                    <option>20</option>
                                </select>
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <label>Cartão</label>
                                <input type="text" class="form-control creditcard">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="expiration">Data</label>
                                <input type="date" asp-format="{MM/YYYY}" class="form-control" id="expiration">
                            </div>
                            <div class="form-group col-md-2">
                                <label for="code">Code</label>
                                <input type="text" class="form-control" id="code">
                            </div>
                        </div>

                        <div class="form-row">
                            <div class="form-group col-md-2">
                                <label>Agencia</label>
                                <input type="text" class="form-control creditcard">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="expiration">Conta</label>
                                <input type="text" asp-format="{MM/YYYY}" class="form-control" id="expiration">
                            </div>
                            <div class="form-group col-md-6">
                                <label for="expiration">Documento</label>
                                <input type="text" class="form-control" id="expiration">
                            </div>
                        </div>

                    </div>

                    <div class="card-footer bg-whitesmoke text-md-right">
                        <button class="btn btn-primary" id="save-btn">Salvar</button>
                    </div>
                </div>
            </form>
        </div>

        @foreach (var wallet in Model) {
                <div class="col-md-3">
                    <div class="card shadow" id="@wallet.Id">
                        <div class="card-header">
                            <h4>@Helper.EnumDisplay(wallet.Type)</h4>
                            <div class="card-header-action">
                                <a data-dismiss="#@wallet.Id" class="btn btn-icon btn-danger" href="#" onclick="Delete('@wallet.Id');" style="border-radius: 3px !important;"><i class="fas fa-times"></i></a>
                            </div>
                        </div>
                        <div class="card-body">
                            <div class="mb-2 text-muted">Documento: <b class="text-warning">@wallet.Document</b></div>
                            <div class="mb-2 text-muted">Data de Processamento: <b class="text-warning">@wallet.DateDue</b></div>
                            <div class="mb-2 text-muted">Agencia: <b class="text-warning">@wallet.Agency</b></div>
                            <div class="mb-2 text-muted">Conta: <b class="text-warning">@wallet.Account</b></div>
                            <div class="mb-2 text-muted">Cartão: <b class="text-warning">@wallet.Card</b></div>
                        </div>
                    </div>
                </div>
            }

    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script src="~/js/forms-advanced-forms.js"></script>

    @*<script type="text/javascript">
            function Delete(id) {
                $.get("/User/DocumentDelete?id=" + id);
            }
        </script>*@
}