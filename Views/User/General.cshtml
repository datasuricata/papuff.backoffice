@model papuff.backoffice.Models.Response.GeneralResponse

@using papuff.backoffice.Models.Helpers
@using System.Security.Claims

@{
    ViewData["Title"] = "Dados Gerais";
    ViewBag.General = "active";
}

<div class="section-header">
    <h1>@ViewData["Title"]</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Dashboard</a></div>
        <div class="breadcrumb-item"><a asp-controller="User" asp-action="Profile">Perfil</a></div>
        <div class="breadcrumb-item active">@ViewData["Title"]</div>
    </div>
</div>

<div class="section-body">
    <h2 class="section-title">Configurações Gerais</h2>
    <p class="section-lead">
        Configurações gerais de usuário
    </p>

    <div id="output-status"></div>
    <div class="row">
        <div class="col-md-4">
            <partial name="_LayoutProfile.cshtml" />
        </div>
        <div class="col-md-8">
            <div class="col-12 col-md-12">
                <div class="card profile-widget" style="margin-top:0px;">
                    <div class="profile-widget-header">
                        <div class="profile-widget-items">
                            <div class="profile-widget-item">
                                <div class="profile-widget-item-label">Cercos</div>
                                <div class="profile-widget-item-value">187</div>
                            </div>
                            <div class="profile-widget-item">
                                <div class="profile-widget-item-label">Seguidores</div>
                                <div class="profile-widget-item-value">6,8K</div>
                            </div>
                            <div class="profile-widget-item">
                                <div class="profile-widget-item-label">Likes</div>
                                <div class="profile-widget-item-value">2,1K</div>
                            </div>
                        </div>
                    </div>
                    <div class="profile-widget-description">
                        <div class="profile-widget-name">
                            Etapa de Cadastro
                            <div class="float-right">
                                <button class="btn btn-sm btn-success">@Model.Stage.EnumDisplay()</button>
                            </div>
                            <div class="text-danger d-inline font-weight-normal"><div class="slash"></div> Pendente</div>
                        </div>
                        <br />
                        @Html.Raw(Model.Description)

                    </div>
                    <div class="card-footer text-center">
                        <div class="font-weight-bold mb-2">Seguir</div>
                        <a href="#" class="btn btn-social-icon btn-facebook mr-1">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="btn btn-social-icon btn-instagram">
                            <i class="fab fa-instagram"></i>
                        </a>
                    </div>
                </div>
            </div>

            <div class="col-12 col-md-12">
                <div class="card">
                    <form method="post" class="needs-validation" novalidate="">

                        <input hidden asp-for="Id" />
                        <input hidden asp-for="UserId" />

                        <div class="card-header">
                            <h4>Alterar Dados Gerais</h4>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="form-group col-md-12 col-12">
                                    <label>Nome Completo</label>
                                    <input type="text" class="form-control" asp-for="Name" required="">
                                    <div class="invalid-feedback">
                                        Please fill in the first name
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-md-6 col-12">
                                    <label>Data de Aniversário</label>
                                    <input type="date" class="form-control" asp-for="BirthDate" required="">
                                    <div class="invalid-feedback">
                                        Please fill in the last name
                                    </div>
                                </div>
                                <div class="form-group col-md-6 col-12">
                                    <label>Telefone</label>
                                    <input type="tel" asp-for="Phone" class="form-control" value="">
                                </div>
                            </div>

                            @if (Model.UserId == User.Claims.FirstOrDefault(a => a.Type == ClaimTypes.NameIdentifier)?.Value) {

                                <div class="row">
                                    <div class="form-group col-12">
                                        <label>Descrição</label>
                                        <textarea class="form-control" asp-for="Description" style="height:120px;"></textarea>
                                    </div>
                                </div>
                            }

                        </div>
                        <div class="card-footer text-right">
                            <button class="btn btn-primary">Savar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}