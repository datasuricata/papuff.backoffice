@{
    ViewData["Title"] = "Primeiros Passos";
}

<div class="section-header">
    <h1>Ajustes Iniciais</h1>
    <div class="section-header-breadcrumb">
        <div class="breadcrumb-item"><a asp-action="Index">Inicio</a></div>
        <div class="breadcrumb-item active">Ajustes</div>
    </div>
</div>

<div class="section-body">
    <div class="row">
        <div class="col-12">
                <div class="card">
                  <!-- <div class="card-header">
                  </div> -->
                  <div class="card-body">
                    <div class="row mt-4">
                      <div class="col-12 col-lg-8 offset-lg-2">
                        <div class="wizard-steps">
                          <div class="wizard-step wizard-step-active">
                            <div class="wizard-step-icon">
                              <i class="fas fa-crown"></i>
                            </div>
                            <div class="wizard-step-label">
                              Meu Reino
                            </div>
                          </div>
                          <div class="wizard-step">
                            <div class="wizard-step-icon">
                              <i class="fas fa-gem"></i>
                            </div>
                            <div class="wizard-step-label">
                              Tesouro
                            </div>
                          </div>
                          <div class="wizard-step">
                            <div class="wizard-step-icon">
                              <i class="fas fa-theater-masks"></i>
                            </div>
                            <div class="wizard-step-label">
                              Atividades
                            </div>
                          </div>
                          <div class="wizard-step">
                            <div class="wizard-step-icon">
                              <i class="fas fa-street-view"></i>
                            </div>
                            <div class="wizard-step-label">
                              Cerco
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>

                    <form class="wizard-content mt-2">
                      <div class="wizard-pane">
                        <div class="form-group row align-items-center">
                          <label class="col-md-4 text-md-right text-left">Como se chama o seu reino?</label>
                          <div class="col-lg-4 col-md-6">
                            <input type="text" placeholder="Reino das Fritas" name="name" class="form-control">
                          </div>
                        </div>
                        <div class="form-group row align-items-center">
                          <label class="col-md-4 text-md-right text-left">Quem é o responsável pelas cartas?</label>
                          <div class="col-lg-4 col-md-6">
                            <input type="email" placeholder="julius.carteiro@reinodasfritas.br" name="email" class="form-control">
                          </div>
                        </div>
                        <div class="form-group row align-items-center">
                          <label class="col-md-4 text-md-right text-left">Por último informe seu CNPJ?</label>
                          <div class="col-lg-4 col-md-6">
                            <input type="email" placeholder="86328400000146" name="email" class="form-control">
                          </div>
                        </div>
                        <div class="form-group row">
                          <label class="col-md-4 text-md-right text-left mt-2">Como entramos no castelo?</label>
                          <div class="col-lg-4 col-md-6">
                            <div class="selectgroup w-100">
                              <label class="selectgroup-item">
                                <input type="radio" name="value" value="developer" class="selectgroup-input">
                                <span class="selectgroup-button">Ingresso</span>
                              </label>
                              <label class="selectgroup-item">
                                <input type="radio" name="value" value="ceo" class="selectgroup-input">
                                <span class="selectgroup-button">Comanda</span>
                              </label>
                            </div>
                          </div>
                        </div>
                        <div class="form-group row">
                          <div class="col-md-4"></div>
                          <div class="col-lg-4 col-md-6 text-right">
                            <a href="#" class="btn btn-icon icon-right btn-primary">Avançar <i class="fas fa-hand-point-right"></i></a>
                          </div>
                        </div>
                      </div>
                    </form>
                  </div>
                </div>
              </div>
    </div>
</div>
